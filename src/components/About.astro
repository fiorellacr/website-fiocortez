<style>
  .about-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  .about-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .about-card {
    background-color: #fdf2f8;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .about-card:hover {
    border-color: var(--color-border-hover);
  }

  .about-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background-color: #dbeafe;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .about-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .about-card-text {
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .journey-card {
    background-color: #fdf2f8;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.5rem;
  }

  .journey-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 1.5rem;
  }

  .journey-timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .journey-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }

  .journey-dot {
    width: 12px;
    height: 12px;
    background-color: var(--color-primary);
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
  }

  .journey-year {
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: 0.25rem;
  }

  .journey-text {
    color: var(--color-text-light);
  }

  @media (min-width: 768px) {
    .about-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
