---
import fioImage from "../assets/fio.webp";
---

<section class="py-20 relative">
  <!-- Pixel art decorations -->
  <div class="pixel-decoration star1 float"></div>
  <div class="pixel-decoration star2 float-delay-1"></div>
  <div class="pixel-decoration star3 float-delay-2"></div>
  <div class="pixel-decoration cloud1 float"></div>
  <div class="pixel-decoration cloud2 float-delay-2"></div>

  <div class="container relative">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div>
        <div class="hello-bubble">
          <span class="pixel-heading text-5xl">HELLO</span>
        </div>

        <h1 class="mt-6 mb-4">
          <span class="welcome-text">Welcome to</span>
          <span class="name-text">Fiorella's World</span>
        </h1>

        <p class="text-xl mb-8">
          Join me on a magical journey through pastel galaxies and rainbow
          adventures.
          <br />Explore my creative universe filled with colors, joy, and
          endless possibilities!
        </p>

        <div class="flex gap-4">
          <a href="#contact" class="btn">
            <span class="pixel-star mr-2"></span>
            Get in Touch
          </a>
          <a href="#portfolio" class="btn">
            <span class="pixel-star mr-2"></span>
            View My Work
          </a>
        </div>
      </div>

      <div class="profile-image-container">
        <div class="pixel-border avatar-frame">
          <img src={fioImage.src} alt="Fiorella" class="avatar float" />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    overflow: hidden;
  }

  .hello-bubble {
    background-color: #fdf87c;
    padding: 1rem 2rem;
    border-radius: 3rem;
    display: inline-block;
    position: relative;
    margin-bottom: 1rem;
    transform: rotate(-2deg);
  }

  .hello-bubble::before,
  .hello-bubble::after {
    content: "";
    position: absolute;
    background-color: #fdf87c;
  }

  .hello-bubble::before {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    bottom: -10px;
    left: 20px;
  }

  .hello-bubble::after {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    bottom: -20px;
    left: 10px;
  }

  .welcome-text {
    display: block;
    font-size: 2.5rem;
    color: var(--color-text-light);
    font-weight: 400;
    line-height: 1;
  }

  .name-text {
    display: block;
    font-family: var(--font-pixel);
    font-size: 3.5rem;
    line-height: 1.2;
    background: linear-gradient(
      90deg,
      var(--color-accent-2),
      var(--color-accent)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: 1px;
  }

  .profile-image-container {
    display: flex;
    justify-content: center;
  }

  .avatar-frame {
    width: 320px;
    height: 320px;
    background-color: white;
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    padding: 10px;
  }

  .avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  /* Pixel decorations */
  .pixel-decoration {
    position: absolute;
    z-index: -1;
  }

  .star1 {
    top: 15%;
    left: 10%;
    width: 20px;
    height: 20px;
    background-color: var(--color-accent-2);
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
  }

  .star2 {
    top: 30%;
    right: 15%;
    width: 15px;
    height: 15px;
    background-color: var(--color-accent);
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
  }

  .star3 {
    bottom: 20%;
    left: 20%;
    width: 25px;
    height: 25px;
    background-color: var(--color-yellow);
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
  }

  .cloud1 {
    top: 15%;
    right: 30%;
    width: 60px;
    height: 30px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 20px;
  }

  .cloud1::before,
  .cloud1::after {
    content: "";
    position: absolute;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
  }

  .cloud1::before {
    width: 25px;
    height: 25px;
    top: -10px;
    left: 10px;
  }

  .cloud1::after {
    width: 25px;
    height: 25px;
    top: -8px;
    right: 10px;
  }

  .cloud2 {
    bottom: 30%;
    right: 10%;
    width: 50px;
    height: 25px;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 15px;
  }

  .cloud2::before,
  .cloud2::after {
    content: "";
    position: absolute;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
  }

  .cloud2::before {
    width: 20px;
    height: 20px;
    top: -8px;
    left: 8px;
  }

  .cloud2::after {
    width: 20px;
    height: 20px;
    top: -6px;
    right: 8px;
  }

  @media (max-width: 768px) {
    .hello-bubble {
      transform: rotate(-5deg);
    }

    .name-text {
      font-size: 2.5rem;
    }
  }
</style>
