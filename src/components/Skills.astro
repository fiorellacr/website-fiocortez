---
const skillCategories = [
  {
    title: "Data Analysis",
    icon: "chart",
    skills: ["Python", "SQL", "R Programming", "Statistical Analysis", "Data Cleaning", "ETL Processes"]
  },
  {
    title: "Visualization",
    icon: "eye",
    skills: ["Power BI", "Tableau", "Looker Studio", "Google Analytics", "Data Storytelling"]
  },
  {
    title: "Tools & Platforms",
    icon: "tool",
    skills: ["MySQL Workbench", "Google Apps Script", "Microsoft Excel", "GitHub", "Google Earth", "BigQuery"]
  }
];
---

<section id="skills" class="section bg-white">
  <div class="container">
    <h2 class="section-title">Skills & Technologies</h2>
    <p class="section-subtitle">Technologies and tools I work with</p>

    <div class="skills-categories">
      {skillCategories.map((category, index) => (
        <div class="skill-category" style={`animation-delay: ${index * 150}ms`}>
          <div class="category-header">
            {category.icon === "chart" && (
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="category-icon">
                <line x1="18" y1="20" x2="18" y2="10"></line>
                <line x1="12" y1="20" x2="12" y2="4"></line>
                <line x1="6" y1="20" x2="6" y2="14"></line>
              </svg>
            )}
            {category.icon === "eye" && (
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="category-icon">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            )}
            {category.icon === "tool" && (
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="category-icon">
                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
              </svg>
            )}
            <h3 class="category-title">{category.title}</h3>
          </div>
          <div class="skills-tags">
            {category.skills.map((skill) => (
              <span class="skill-tag">{skill}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section-subtitle {
    text-align: center;
    color: var(--color-text-light);
    font-size: 1.125rem;
    margin-top: -1.5rem;
    margin-bottom: 3rem;
  }

  .skills-categories {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .skill-category {
    background: linear-gradient(135deg, #fdf2f8 0%, #f0f9ff 100%);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.5s ease forwards;
    opacity: 0;
  }

  .skill-category:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 10px 40px -10px rgba(37, 99, 235, 0.2);
  }

  .category-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .category-icon {
    color: var(--color-primary);
  }

  .category-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .skills-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .skill-tag {
    background-color: white;
    color: var(--color-text);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
  }

  .skill-tag:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    transform: scale(1.05);
  }

  @media (min-width: 768px) {
    .skills-categories {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
