---
const skills = [
  { name: "Python", level: 85 },
  { name: "SQL", level: 90 },
  { name: "Power BI", level: 85 },
  { name: "Tableau", level: 80 },
  { name: "Google Analytics", level: 85 },
  { name: "Data Analysis", level: 90 },
  { name: "R Programming", level: 75 },
];

const tools = [
  "Python", "SQL", "R", "Power BI", "Tableau",
  "Google Apps Script", "Looker Studio", "GitHub",
  "MySQL Workbench", "Google Analytics", "Microsoft Excel", "Google Earth"
];
---

<section id="skills" class="section bg-white">
  <div class="container">
    <h2 class="section-title">Skills & Technologies</h2>

    <div class="skills-grid">
      {skills.map((skill, index) => (
        <div class="skill-card" style={`animation-delay: ${index * 100}ms`}>
          <div class="skill-header">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="skill-icon">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
            <h3 class="skill-name">{skill.name}</h3>
          </div>
          <div class="progress-bar">
            <div class="progress-fill" style={`width: ${skill.level}%`}></div>
          </div>
          <p class="skill-level">{skill.level}%</p>
        </div>
      ))}
    </div>

    <div class="tools-section">
      <h3 class="tools-title">Tools & Platforms</h3>
      <div class="tools-grid">
        {tools.map((tool) => (
          <span class="badge">{tool}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .skills-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
    margin-bottom: 4rem;
  }

  .skill-card {
    background-color: #fdf2f8;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.5s ease forwards;
    opacity: 0;
  }

  .skill-card:hover {
    border-color: var(--color-border-hover);
    transform: scale(1.02);
  }

  .skill-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .skill-icon {
    width: 32px;
    height: 32px;
    color: var(--color-primary);
  }

  .skill-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text);
  }

  .skill-level {
    font-size: 0.875rem;
    color: var(--color-text-light);
    font-weight: 500;
    margin-top: 0.5rem;
  }

  .tools-section {
    text-align: center;
  }

  .tools-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 2rem;
  }

  .tools-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  @media (min-width: 640px) {
    .skills-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .skills-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
