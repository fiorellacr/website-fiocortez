---
const experiences = [
  {
    company: "AULA20",
    position: "Data Analyst",
    period: "Current",
    description: "Responsible for collecting, cleaning, and structuring multi-source institutional data. Automating integration processes and maintaining analytical models to provide stakeholders with real-time management alerts and insights.",
  },
  {
    company: "YOFC Perú SAC",
    position: "Project Manager Assistant",
    period: "April 2023 - October 2025",
    description: "Managed large-scale data processing for telecommunications projects using Python scripting and automated reporting.",
  },
  {
    company: "Bitel Perú",
    position: "Operations Assistant",
    period: "July 2019 - August 2019",
    description: "Supported technical operations and generated daily activity reports with photographic documentation.",
  },
];
---

<section id="experience" class="section bg-gradient-to-b from-pink-50 to-white">
  <div class="container">
    <h2 class="section-title">Experience</h2>

    <div class="experience-list">
      {experiences.map((exp) => (
        <div class="experience-card">
          <div class="experience-content">
            <h3 class="experience-position">{exp.position}</h3>
            <p class="experience-company">{exp.company}</p>
            <p class="experience-period">{exp.period}</p>
            <p class="experience-description">{exp.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .experience-card {
    background-color: white;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .experience-card:hover {
    border-color: var(--color-border-hover);
  }

  .experience-position {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
  }

  .experience-company {
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text-light);
    margin-bottom: 0.25rem;
  }

  .experience-period {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: 0.75rem;
  }

  .experience-description {
    color: var(--color-text);
    line-height: 1.6;
  }
</style>
