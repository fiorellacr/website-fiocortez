<style>
  section {
    position: relative;
    overflow: hidden;
  }

  .contact-container {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
  }

  .contact-card {
    background-color: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    position: relative;
    z-index: 2;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
  }

  .contact-title {
    font-family: var(--font-pixel);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    position: relative;
    display: inline-block;
    color: var(--color-accent);
    text-shadow: 2px 2px 0 var(--color-accent-2);
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon-wrapper {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-yellow);
    padding: 0.5rem;
    box-shadow: 2px 2px 0 var(--color-accent);
  }

  .icon {
    width: 20px;
    height: 20px;
    color: var(--color-text);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background-color: white;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 0 var(--color-accent);
  }

  .social-link:hover {
    transform: translateY(-3px);
    box-shadow: 3px 3px 0 var(--color-accent-2);
  }

  .social-link svg {
    width: 18px;
    height: 18px;
    fill: var(--color-text);
  }

  .form-group {
    margin-bottom: 1.5rem;
    position: relative;
  }

  .form-label {
    display: block;
    font-family: var(--font-pixel);
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .form-input {
    width: 100%;
    padding: 0.75rem;
    border: 3px solid var(--color-accent);
    background-color: white;
    font-family: var(--font-main);
    position: relative;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    transform: translate(-3px, -3px);
    box-shadow: 3px 3px 0 var(--color-accent);
  }

  .form-shine {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.4) 0%,
      rgba(255, 255, 255, 0) 60%
    );
    z-index: 2;
  }

  .contact-btn {
    margin-top: 1rem;
    width: 100%;
  }

  /* Pixel decorations */
  .cloud3,
  .cloud4 {
    background-color: rgba(255, 255, 255, 0.7);
    position: absolute;
    z-index: 1;
  }

  .cloud3 {
    width: 70px;
    height: 35px;
    border-radius: 30px;
    top: 10%;
    right: -20px;
  }

  .cloud3::before,
  .cloud3::after {
    content: "";
    position: absolute;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
  }

  .cloud3::before {
    width: 30px;
    height: 30px;
    top: -15px;
    left: 15px;
  }

  .cloud3::after {
    width: 25px;
    height: 25px;
    top: -10px;
    right: 15px;
  }

  .cloud4 {
    width: 50px;
    height: 25px;
    border-radius: 20px;
    bottom: 20%;
    left: -10px;
  }

  .cloud4::before,
  .cloud4::after {
    content: "";
    position: absolute;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
  }

  .cloud4::before {
    width: 20px;
    height: 20px;
    top: -10px;
    left: 10px;
  }

  .cloud4::after {
    width: 15px;
    height: 15px;
    top: -8px;
    right: 10px;
  }

  .star5 {
    position: absolute;
    bottom: 20%;
    right: 20px;
    width: 25px;
    height: 25px;
    background-color: var(--color-accent-2);
    clip-path: polygon(
      50% 0%,
      61% 35%,
      98% 35%,
      68% 57%,
      79% 91%,
      50% 70%,
      21% 91%,
      32% 57%,
      2% 35%,
      39% 35%
    );
    z-index: 1;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-info {
      margin-bottom: 2rem;
    }
  }
</style>
